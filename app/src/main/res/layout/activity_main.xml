<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root_constraint_layout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select button to perform an action" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:id="@+id/textView" app:layout_constraintHorizontal_bias="0.539"
            android:layout_marginTop="40dp" app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Press and hold any button for details!"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:id="@+id/textView2" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintHorizontal_bias="0.582"/>

    <Button
            android:id="@+id/btn_req_image_feature"
            android:text="Request Image feature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/btn_launch_img_large_module"
            app:layout_constraintHorizontal_bias="0.49"/>

    <Button
            android:id="@+id/btn_launch_img_module"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Launch Image Module"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.526"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/textView2"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:text="Launch Image Large Module"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.524" android:id="@+id/btn_launch_img_large_module"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/btn_launch_img_module"/>

    <Button
            android:id="@+id/btn_req_image_large_feature"
            android:text="Request Large Image feature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.496" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_req_image_feature"/>

    <Button
            android:id="@+id/btn_req_deferred_image_feature"
            android:text="Request Deferred Image Features "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_req_image_large_feature"
    />

    <Button
            android:id="@+id/btn_uninstall_features"
            android:text="Uninstall Features"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_req_deferred_image_feature"
            app:layout_constraintHorizontal_bias="0.54"/>

    <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/btn_uninstall_features"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/progressbar_textview"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.657"/>

    <TextView
            android:id="@+id/progressbar_textview"
            android:layout_width="376dp"
            android:layout_height="145dp"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textAlignment="center"
            android:singleLine="false"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.578"/>
</androidx.constraintlayout.widget.ConstraintLayout>